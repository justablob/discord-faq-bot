{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2017",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "./dist/**/*"
  ]
}
